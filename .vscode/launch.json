    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug Pong Game",
            "cargo": {
                "args": [
                    "build",
                    "--bin=pong_rs",
                    "--package=pong_rs"
                ],
                "filter": {
                    "name": "pong_rs",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Run Pong Game (Release)",
            "cargo": {
                "args": [
                    "build",
                    "--release",
                    "--bin=pong_rs",
                    "--package=pong_rs"
                ],
                "filter": {
                    "name": "pong_rs",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        }
    ]
}